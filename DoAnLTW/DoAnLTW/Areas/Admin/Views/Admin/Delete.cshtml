@model DoAnLTW.Models.ApplicationUser

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "_LayoutAdmin";
}

<link rel="stylesheet" href="~/css/categoryView.css" asp-append-version="true" />

<style>
    /* Root Variables for Consistent Theming */
    :root {
        --primary-color: #2563eb; /* Soft blue */
        --accent-color: #f59e0b; /* Warm amber */
        --background-color: #f3f4f6; /* Light gray background */
        --card-background: #ffffff;
        --text-dark: #1f2937; /* Dark gray for text */
        --text-muted: #6b7280; /* Muted text */
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        --border-radius: 8px;
        --transition: all 0.2s ease-in-out;
    }

    /* Container */
    .container-fluid {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 1.5rem;
        background: var(--background-color);
        border-radius: var(--border-radius);
    }

    /* Card Styling */
    .card {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        transition: var(--transition);
    }

        .card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .card-header {
        background: var(--card-background);
        border-bottom: 1px solid #e5e7eb;
        padding: 1.25rem;
    }

        .card-header h1 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .card-body {
        padding: 1.5rem;
    }

    /* Confirmation Message */
    .confirmation-message {
        font-size: 1rem;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
    }

        .confirmation-message strong {
            color: var(--primary-color);
        }

    /* Form Styling */
    .form-group {
        margin-bottom: 1.25rem;
    }

    .dl-horizontal dt {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .dl-horizontal dd {
        font-size: 1rem;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
    }

    .text-danger {
        font-size: 0.75rem;
        color: #dc2626;
        margin-top: 0.25rem;
    }

    /* Button Styling */
    .btn {
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.5rem 1.25rem;
        border-radius: 20px;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-danger {
        background: #dc2626;
        border: none;
        color: #fff;
    }

        .btn-danger:hover {
            background: #b91c1c; /* Darker red */
            transform: translateY(-2px);
        }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--primary-color);
        text-decoration: none;
        transition: var(--transition);
    }

        .back-link:hover {
            color: #1e40af; /* Darker blue */
            text-decoration: underline;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .container-fluid

    {
        padding: 1rem;
    }

    .card-header h1 {
        font-size: 1.125rem;
    }

    .confirmation-message {
        font-size: 0.875rem;
    }

    .dl-horizontal dt,
    .dl-horizontal dd {
        font-size: 0.75rem;
    }

    .btn,
    .back-link {
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
        width: 100%;
        justify-content: center;
    }

    .form-group .btn + .back-link {
        margin-top: 0.5rem;
    }

    }
</style>

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h1><i class="fas fa-trash-alt"></i> Xóa người dùng</h1>
        </div>
        <div class="card-body">
            <h3 class="confirmation-message">Bạn có chắc chắn muốn xóa người dùng này?</h3>
            <div>
                <h4>Thông tin người dùng</h4>
                <hr />
                <dl class="row dl-horizontal">
                    <dt class="col-sm-2">
                        Tên người dùng
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Tên đầy đủ
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>
                </dl>

                <form asp-action="Delete" id="userDeleteForm">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <a asp-action="Index" class="back-link"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Handle form submission
            $('#userDeleteForm').submit(function (e) {
                e.preventDefault();

                if ($(this).valid()) {
                    $.ajax({
                        url: $(this).attr('action'),
                        type: 'POST',
                        data: $(this).serialize(),
                        success: function (response) {
                            if (response.success) {
                                toastr.success(response.message);
                                setTimeout(function () {
                                    window.location.href = '@Url.Action("Index")';
                                }, 1500);
                            } else {
                                toastr.error(response.message);
                            }
                        },
                        error: function () {
                            toastr.error('Đã xảy ra lỗi khi xóa người dùng');
                        }
                    });
                }
            });
        });
    </script>
}