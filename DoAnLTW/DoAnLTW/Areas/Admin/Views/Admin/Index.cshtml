@model IEnumerable<DoAnLTW.Models.ApplicationUser>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Root Variables for Consistent Theming */
    :root {
        --primary-color: #2563eb; /* Soft blue */
        --accent-color: #f59e0b; /* Warm amber */
        --background-color: #f3f4f6; /* Light gray background */
        --card-background: #ffffff;
        --text-dark: #1f2937; /* Dark gray for text */
        --text-muted: #6b7280; /* Muted text */
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        --border-radius: 8px;
        --transition: all 0.2s ease-in-out;
    }

    /* Container */
    .user-management-container {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 1.5rem;
        background: var(--background-color);
        border-radius: var(--border-radius);
    }

    /* Page Title */
    h1 {
        font-size: 1.875rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
        border-bottom: 2px solid var(--accent-color);
        padding-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Add Button */
    .add-btn {
        background: var(--accent-color);
        border: none;
        color: #fff;
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.5rem 1.25rem;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: var(--transition);
        margin-bottom: 1.5rem;
        text-decoration: none;
    }

    .add-btn:hover {
        background: #d97706; /* Darker amber */
        transform: translateY(-2px);
    }

    /* Admin Table */
    .admin-table {
        width: 100%;
        border-collapse: collapse;
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .admin-table thead th {
        background: #f9fafb;
        color: var(--text-dark);
        font-weight: 500;
        padding: 0.75rem 1rem;
        text-align: left;
        font-size: 0.875rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .admin-table tbody tr {
        transition: var(--transition);
    }

    .admin-table tbody tr:hover {
        background: #f0f7ff;
    }

    .admin-table tbody td {
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
        color: var(--text-dark);
        border-bottom: 1px solid #e5e7eb;
    }

    .admin-table .edit-btn,
    .admin-table .btn-danger {
        font-size: 0.875rem;
        padding: 0.5rem;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
        text-decoration: none;
    }

    .admin-table .edit-btn {
        color: #16a34a;
        border: 1px solid #16a34a;
        margin-right: 0.5rem;
    }

    .admin-table .edit-btn:hover {
        background: #16a34a;
        color: #fff;
    }

    .admin-table .btn-danger {
        color: #dc2626;
        border: 1px solid #dc2626;
    }

    .admin-table .btn-danger:hover {
        background: #dc2626;
        color: #fff;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .user-management-container {
            padding: 1rem;
        }

        h1 {
            font-size: 1.5rem;
        }

        .add-btn {
            width: 100%;
            justify-content: center;
        }

        .admin-table thead {
            display: none; /* Hide headers on small screens */
        }

        .admin-table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid #e5e7eb;
            border-radius: var(--border-radius);
        }

        .admin-table tbody td {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 1rem;
            border-bottom: none;
        }

        .admin-table tbody td:before {
            content: attr(data-label);
            font-weight: 600;
            color: var(--text-muted);
            width: 40%;
        }

        .admin-table tbody td:last-child {
            justify-content: flex-end;
            gap: 0.5rem;
        }
    }
</style>

<div class="user-management-container">
    <h1><i class="fas fa-users"></i> Quản lý người dùng</h1>

    <p>
        <a asp-action="Create" class="add-btn"><i class="fas fa-plus"></i> Tạo mới</a>
    </p>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>Tên đầy đủ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td data-label="Tên người dùng">@user.UserName</td>
                        <td data-label="Email">@user.Email</td>
                        <td data-label="Tên đầy đủ">@user.FullName</td нашим>
                        <td data-label="Hành động">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="edit-btn" title="Sửa"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" title="Xóa"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-muted" style="text-align: center; padding: 2rem;">
                        Không có người dùng nào để hiển thị.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>