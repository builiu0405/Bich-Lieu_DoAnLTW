@model DoAnLTW.Models.ApplicationUser

@{
    ViewData["Title"] = "Tạo người dùng";
    Layout = "_LayoutAdmin";
}

<link rel="stylesheet" href="~/css/categoryView.css" asp-append-version="true" />

<style>
    /* Root Variables for Consistent Theming */
    :root {
        --primary-color: #2563eb; /* Soft blue */
        --accent-color: #f59e0b; /* Warm amber */
        --background-color: #f3f4f6; /* Light gray background */
        --card-background: #ffffff;
        --text-dark: #1f2937; /* Dark gray for text */
        --text-muted: #6b7280; /* Muted text */
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        --border-radius: 8px;
        --transition: all 0.2s ease-in-out;
    }

    /* Container */
    .container-fluid {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 1.5rem;
        background: var(--background-color);
        border-radius: var(--border-radius);
    }

    /* Card Styling */
    .card {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        transition: var(--transition);
    }

        .card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .card-header {
        background: var(--card-background);
        border-bottom: 1px solid #e5e7eb;
        padding: 1.25rem;
    }

        .card-header h1 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .card-body {
        padding: 1.5rem;
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 1.25rem;
    }

        .form-group label {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            display: block;
        }

    .form-control {
        border-radius: var(--border-radius);
        border: 1px solid #d1d5db;
        padding: 0.75rem;
        font-size: 0.875rem;
        color: var(--text-dark);
        transition: var(--transition);
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            outline: none;
        }

    .text-danger {
        font-size: 0.75rem;
        color: #dc2626;
        margin-top: 0.25rem;
    }

    /* Button Styling */
    .btn {
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.5rem 1.25rem;
        border-radius: 20px;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: var(--accent-color);
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background: #d97706; /* Darker amber */
            transform: translateY(-2px);
        }

    /* Back Link */
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--primary-color);
        text-decoration: none;
        margin-top: 1rem;
        transition: var(--transition);
    }

        .back-link:hover {
            color: #1e40af; /* Darker blue */
            text-decoration: underline;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .container-fluid

    {
        padding: 1rem;
    }

    .card-header h1 {
        font-size: 1.125rem;
    }

    .form-group label {
        font-size: 0.75rem;
    }

    .form-control {
        font-size: 0.75rem;
        padding: 0.5rem;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
        width: 100%;
        justify-content: center;
    }

    .back-link {
        font-size: 0.75rem;
    }

    }
</style>

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h1><i class="fas fa-user-plus"></i> Tạo người dùng</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input name="email" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tên đầy đủ</label>
                            <input name="fullName" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mật khẩu</label>
                            <input name="password" type="password" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Chọn quyền</label>
                            <select name="role" class="form-control">
                                <option value="Admin">Admin</option>
                                <option value="Admin">Employee</option>
                                <option value="User">Customer</option>
                            </select>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Tạo" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Index" class="back-link"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>