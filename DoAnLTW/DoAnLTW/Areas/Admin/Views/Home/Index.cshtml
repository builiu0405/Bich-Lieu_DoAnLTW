@model IEnumerable<DoAnLTW.Models.Product>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Bảng điều khiển";
    var totalProducts = ViewBag.TotalProducts ?? 0;
    var totalOrders = ViewBag.TotalOrders ?? 0;
    var totalUsers = ViewBag.TotalUsers ?? 0;
}

<style>
    /* Root Variables for Consistent Theming */
    :root {
        --primary-color: #2563eb; /* Softer blue */
        --accent-color: #f59e0b; /* Warm amber */
        --background-color: #f3f4f6; /* Light gray background */
        --card-background: #ffffff;
        --text-dark: #1f2937; /* Dark gray for text */
        --text-muted: #6b7280; /* Muted text */
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        --border-radius: 8px;
        --transition: all 0.2s ease-in-out;
    }

    /* General Container */
    .admin-container {
        padding: 1.5rem;
        background-color: var(--background-color);
        min-height: calc(100vh - 80px);
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Admin Title */
    .admin-title {
        font-size: 1.875rem;
        font-weight: 600;
        color: var(--text-dark);
        padding-bottom: 0.5rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border-bottom: 2px solid var(--accent-color);
    }

        .admin-title i {
            font-size: 1.5rem;
            color: var(--accent-color);
        }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .stat-card {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        transition: var(--transition);
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

        .stat-card .card-body {
            padding: 1.5rem;
            text-align: center;
        }

    .stat-icon {
        font-size: 2rem;
        color: var(--accent-color);
        margin-bottom: 0.75rem;
    }

    .stat-card h3 {
        font-size: 1.125rem;
        font-weight: 500;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.75rem;
    }

    .stat-card .btn {
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.5rem 1.25rem;
        border-radius: 20px;
        border: 1px solid var(--primary-color);
        color: var(--primary-color);
        background: transparent;
        transition: var(--transition);
    }

        .stat-card .btn:hover {
            background: var(--primary-color);
            color: #fff;
        }

    /* Product Section */
    .product-section {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

        .product-section .card-header {
            background: var(--card-background);
            padding: 1.25rem;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .product-section h2 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .product-section .btn-primary {
            background: var(--accent-color);
            border-color: var(--accent-color);
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.5rem 1.25rem;
            border-radius: 20px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition);
        }

            .product-section .btn-primary:hover {
                background: #d97706;
                border-color: #d97706;
            }

    /* Product Table */
    .product-table {
        width: 100%;
        border-collapse: collapse;
    }

        .product-table thead th {
            background: #f9fafb;
            color: var(--text-dark);
            font-weight: 500;
            padding: 0.75rem 1rem;
            text-align: left;
            font-size: 0.875rem;
            border-bottom: 1px solid #e5e7eb;
        }

        .product-table tbody tr {
            transition: var(--transition);
        }

            .product-table tbody tr:hover {
                background: #f0f7ff;
            }

        .product-table tbody td {
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
            color: var(--text-dark);
            border-bottom: 1px solid #e5e7eb;
        }

        .product-table .text-primary {
            font-weight: 600;
            color: var(--primary-color) !important;
        }

        .product-table .actions {
            display: flex;
            gap: 0.5rem;
        }

            .product-table .actions .btn {
                width: 32px;
                height: 32px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 0.875rem;
                border: 1px solid;
                transition: var(--transition);
            }

        .product-table .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .product-table .btn-outline-primary:hover {
                background: var(--primary-color);
                color: #fff;
            }

        .product-table .btn-outline-success {
            color: #16a34a;
            border-color: #16a34a;
        }

            .product-table .btn-outline-success:hover {
                background: #16a34a;
                color: #fff;
            }

        .product-table .btn-outline-danger {
            color: #dc2626;
            border-color: #dc2626;
        }

            .product-table .btn-outline-danger:hover {
                background: #dc2626;
                color: #fff;
            }

        .product-table .text-muted {
            font-size: 0.875rem;
            color: var(--text-muted);
            text-align: center;
            padding: 2rem;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .admin-container

    {
        padding: 1rem;
    }

    .admin-title {
        font-size: 1.5rem;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .stat-card .card-body {
        padding: 1rem;
    }

    .stat-value {
        font-size: 1.5rem;
    }

    .product-section .card-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
    }

    .product-section h2 {
        font-size: 1.125rem;
    }

    .product-table thead {
        display: none; /* Hide table headers on small screens */
    }

    .product-table tbody tr {
        display: block;
        margin-bottom: 1rem;
        border: 1px solid #e5e7eb;
        border-radius: var(--border-radius);
    }

    .product-table tbody td {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 1rem;
        border-bottom: none;
    }

        .product-table tbody td:before {
            content: attr(data-label);
            font-weight: 600;
            color: var(--text-muted);
            width: 40%;
        }

    .product-table .actions {
        justify-content: flex-end;
    }

    }
</style>

<div class="admin-container">
    <h1 class="admin-title">
        <i class="fas fa-tachometer-alt"></i> Bảng điều khiển
    </h1>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="card-body">
                <span class="stat-icon"><i class="fas fa-box-open"></i></span>
                <h3>Tổng sản phẩm</h3>
                <p class="stat-value">@totalProducts</p>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn">Xem chi tiết</a>
            </div>
        </div>
        <div class="stat-card">
            <div class="card-body">
                <span class="stat-icon"><i class="fas fa-shopping-cart"></i></span>
                <h3>Tổng đơn hàng</h3>
                <p class="stat-value">@totalOrders</p>
                <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn">Xem chi tiết</a>
            </div>
        </div>
        <div class="stat-card">
            <div class="card-body">
                <span class="stat-icon"><i class="fas fa-users"></i></span>
                <h3>Tổng người dùng</h3>
                <p class="stat-value">@totalUsers</p>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn">Xem chi tiết</a>
            </div>
        </div>
    </div>

    <div class="product-section">
        <div class="card-header">
            <h2><i class="fas fa-list"></i> Danh sách sản phẩm</h2>
            @if (User.IsInRole("Admin"))
            {
                <a asp-area="Admin" asp-controller="Product" asp-action="Add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm sản phẩm
                </a>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="product-table">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Phần trăm giảm giá</th>
                            <th>Số lượng</th>
                            <th>Danh mục</th>
                            <th>Chi nhánh</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td data-label="Tên sản phẩm">@product.Name</td>
                                    <td data-label="Giá" class="text-primary">@product.Price.ToString("N0") VNĐ</td>
                                    <td data-label="Phần trăm giảm giá">@(product.Discount.HasValue? product.Discount.Value.ToString("N0") + " %" : "N/A")</td>
                                    <td data-label="Số lượng">@product.Stock</td>
                                    <td data-label="Danh mục">@(product.Category?.Name ?? "Chưa có")</td>
                                    <td data-label="Chi nhánh">@(product.Brand?.Name ?? "Chưa có")</td>
                                    <td data-label="Thao tác" class="actions">
                                        <a asp-area="Admin" asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" class="btn btn-outline-primary" title="Xem">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-success" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger" title=")xóa">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                        else if (User.IsInRole("Employee"))
                                        {
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-outline-success" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-muted">Không có sản phẩm nào để hiển thị.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>