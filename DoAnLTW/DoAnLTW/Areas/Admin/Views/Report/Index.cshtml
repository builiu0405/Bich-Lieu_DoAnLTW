@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Báo cáo doanh thu";
}

<div class="revenue-report-container">
    <!-- Header Section -->
    <div class="report-header">
        <h2 class="report-title">📊 Báo cáo doanh thu</h2>
        <div class="report-date">Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
    </div>

    <!-- Revenue Summary Cards -->
    <div class="revenue-cards">
        <div class="revenue-card primary">
            <div class="card-icon">💰</div>
            <div class="card-content">
                <h3>Doanh thu hôm nay</h3>
                <div class="revenue-amount">@ViewBag.RevenueToday.ToString("N0") ₫</div>
                <div class="card-date">@DateTime.Today.ToString("dd/MM/yyyy")</div>
            </div>
        </div>

        <div class="revenue-card secondary">
            <div class="card-icon">👥</div>
            <div class="card-content">
                <h3>Tổng khách hàng</h3>
                <div class="customer-count">@Model.Count()</div>
                <div class="card-subtitle">Khách hàng có đơn hàng</div>
            </div>
        </div>

        <div class="revenue-card tertiary">
            <div class="card-icon">📈</div>
            <div class="card-content">
                <h3>Trung bình/khách</h3>
                <div class="avg-revenue">@(Model.Any() ? (ViewBag.RevenueToday / Model.Sum(x => (decimal)x.OrderCount)).ToString("N0") : "0") ₫</div>
                <div class="card-subtitle">Doanh thu trung bình</div>
            </div>
        </div>
    </div>

    <!-- Customer Revenue Table -->
    <div class="table-section">
        <div class="table-header">
            <h4 class="table-title">📋 Thống kê doanh thu theo khách hàng</h4>
            <div class="table-actions">
                <button class="btn-export">📄 Xuất Excel</button>
                <button class="btn-filter">🔍 Lọc</button>
            </div>
        </div>

        <div class="table-container">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th class="col-stt">STT</th>
                        <th class="col-username">Tài khoản</th>
                        <th class="col-fullname">Họ tên</th>
                        <th class="col-orders">Số đơn hàng</th>
                        <th class="col-revenue">Tổng doanh thu</th>
                        <th class="col-actions">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int stt = 1;
                        foreach (var item in Model)
                        {
                            <tr class="table-row" data-revenue="@item.TotalRevenue">
                                <td class="col-stt">
                                    <span class="stt-badge">@(stt++)</span>
                                </td>
                                <td class="col-username">
                                    <div class="user-info">
                                        <div class="user-avatar">👤</div>
                                        <span class="username">@item.UserName</span>
                                    </div>
                                </td>
                                <td class="col-fullname">
                                    <span class="fullname">@item.FullName</span>
                                </td>
                                <td class="col-orders">
                                    <span class="order-badge">@item.OrderCount</span>
                                </td>
                                <td class="col-revenue">
                                    <span class="revenue-amount">@item.TotalRevenue.ToString("N0") ₫</span>
                                </td>
                                <td class="col-actions">
                                    <button class="btn-detail" title="Xem chi tiết">👁️</button>
                                    <button class="btn-chart" title="Biểu đồ">📊</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .revenue-report-container {
        padding: 0;
        font-family: 'Inter', sans-serif;
    }

    /* Header Section */
    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(102, 126, 234, 0.1);
    }

    .report-title {
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    .report-date {
        color: #718096;
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        background: rgba(113, 128, 150, 0.1);
        border-radius: 20px;
    }

    /* Revenue Cards */
    .revenue-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .revenue-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .revenue-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .revenue-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.2);
        }

        .revenue-card.primary::before {
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .revenue-card.secondary::before {
            background: linear-gradient(135deg, #48bb78, #38a169);
        }

        .revenue-card.tertiary::before {
            background: linear-gradient(135deg, #ed8936, #dd6b20);
        }

    .card-icon {
        font-size: 3rem;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(102, 126, 234, 0.1);
        border-radius: 50%;
    }

    .card-content h3 {
        font-size: 1rem;
        color: #4a5568;
        margin: 0 0 0.5rem 0;
        font-weight: 500;
    }

    .revenue-amount {
        font-size: 2rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 0.25rem;
    }

    .customer-count {
        font-size: 2rem;
        font-weight: 700;
        color: #48bb78;
        margin-bottom: 0.25rem;
    }

    .avg-revenue {
        font-size: 2rem;
        font-weight: 700;
        color: #ed8936;
        margin-bottom: 0.25rem;
    }

    .card-date, .card-subtitle {
        font-size: 0.85rem;
        color: #718096;
    }

    /* Table Section */
    .table-section {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 2rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

    .table-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
    }

    .table-actions {
        display: flex;
        gap: 0.75rem;
    }

    .btn-export, .btn-filter {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-export:hover, .btn-filter:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

    .table-container {
        overflow-x: auto;
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
    }

        .modern-table thead th {
            background: #f8fafc;
            color: #4a5568;
            font-weight: 600;
            text-align: left;
            padding: 1.25rem 1.5rem;
            border-bottom: 2px solid #e2e8f0;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modern-table tbody td {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            vertical-align: middle;
        }

    .table-row {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .table-row:hover {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
            transform: scale(1.01);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.1);
        }

    .stt-badge {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 0.5rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
    }

    .username {
        font-weight: 500;
        color: #2d3748;
    }

    .fullname {
        font-weight: 500;
        color: #2d3748;
    }

    .order-badge {
        background: rgba(72, 187, 120, 0.1);
        color: #38a169;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .col-revenue .revenue-amount {
        font-weight: 700;
        color: #e53e3e;
        font-size: 1.1rem;
    }

    .btn-detail, .btn-chart {
        background: rgba(102, 126, 234, 0.1);
        border: none;
        padding: 0.5rem;
        border-radius: 8px;
        cursor: pointer;
        margin: 0 0.25rem;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .btn-detail:hover {
            background: rgba(102, 126, 234, 0.2);
            transform: scale(1.1);
        }

        .btn-chart:hover {
            background: rgba(237, 137, 54, 0.2);
            transform: scale(1.1);
        }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .revenue-cards

    {
        grid-template-columns: 1fr;
    }

    .table-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    }

    @@media (max-width: 768px) {
        .revenue-report-container

    {
        padding: 0;
    }

    .report-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    .revenue-card {
        flex-direction: column;
        text-align: center;
        padding: 1.5rem;
    }

    .card-icon {
        width: 60px;
        height: 60px;
        font-size: 2rem;
    }

    .modern-table {
        font-size: 0.875rem;
    }

        .modern-table thead th,
        .modern-table tbody td {
            padding: 0.75rem 0.5rem;
        }

    .user-info {
        flex-direction: column;
        gap: 0.5rem;
    }

    .user-avatar {
        width: 30px;
        height: 30px;
        font-size: 1rem;
    }

    }

    /* Animation */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .revenue-card {
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
    }

        .revenue-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .revenue-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .revenue-card:nth-child(3) {
            animation-delay: 0.3s;
        }

    .table-section {
        animation: fadeInUp 0.8s ease-out;
        animation-delay: 0.4s;
        animation-fill-mode: both;
    }
</style>