@model DoAnLTW.Models.Brand
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chi tiết thương hiệu";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/categoryView.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
<style>
    /* CSS mới cho trang chi tiết */
    .admin-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 40px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border-top: 4px solid #3498db;
    }

    h2 {
        color: #2c3e50;
        margin-bottom: 30px;
        text-align: center;
        font-size: 28px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .brand-details {
        background: #f9fbfd;
        border-radius: 10px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        border: 1px solid #eaeaea;
    }

        .brand-details p {
            margin-bottom: 20px;
            font-size: 18px;
            color: #444;
            display: flex;
            align-items: flex-start;
        }

        .brand-details strong {
            min-width: 140px;
            display: inline-block;
            color: #2c3e50;
            font-weight: 600;
        }

        .brand-details img {
            max-width: 200px;
            height: auto;
            border-radius: 8px;
            border: 1px solid #eaeaea;
            padding: 8px;
            background: white;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            display: block;
            margin: 10px 0 0 140px;
        }

    .action-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .btn {
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
        min-width: 160px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
    }

    .update-btn {
        background: linear-gradient(to right, #3498db, #2980b9);
        color: white;
    }

        .update-btn:hover {
            background: linear-gradient(to right, #2980b9, #3498db);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
        }

    .cancel-btn {
        background: linear-gradient(to right, #7f8c8d, #95a5a6);
        color: white;
    }

        .cancel-btn:hover {
            background: linear-gradient(to right, #6c7a7d, #7f8c8d);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(149, 165, 166, 0.3);
        }

    .detail-icon {
        font-size: 24px;
        margin-right: 15px;
        color: #3498db;
        min-width: 30px;
        text-align: center;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .admin-container {
            margin: 20px;
            padding: 25px;
        }

        .brand-details p {
            flex-direction: column;
        }

        .brand-details strong {
            min-width: 100%;
            margin-bottom: 5px;
        }

        .brand-details img {
            margin-left: 0;
            margin-top: 15px;
        }

        .action-links {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 100%;
            max-width: 300px;
        }
    }
</style>

<div class="admin-container">
    <h2>Chi tiết chi nhánh</h2>
    <div class="brand-details">
        <p>
            <i class="fas fa-id-card detail-icon"></i>
            <strong>ID:</strong> @Model.Id
        </p>
        <p>
            <i class="fas fa-store detail-icon"></i>
            <strong>Tên thương hiệu:</strong> @Model.Name
        </p>
        <p>
            <i class="fas fa-image detail-icon"></i>
            <strong>Logo:</strong>
            <img src="@Model.LogoUrl" alt="@Model.Name" />
        </p>
        <p>
            <i class="fas fa-align-left detail-icon"></i>
            <strong>Mô tả:</strong> @Model.Description
        </p>
    </div>
    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn update-btn">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn cancel-btn">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>