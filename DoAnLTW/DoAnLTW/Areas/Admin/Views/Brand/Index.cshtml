@model IEnumerable<DoAnLTW.Models.Brand>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý thương hiệu";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/categoryView.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
<style>
    /* CSS mới cho trang quản lý thương hiệu */
    .admin-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 25px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #2c3e50;
        margin-bottom: 25px;
        font-size: 26px;
        text-align: center;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f4f8;
        position: relative;
    }

        h2::after {
            content: "";
            position: absolute;
            bottom: -2px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, #3498db, #2ecc71);
        }

    .button-add {
        text-align: right;
        margin-bottom: 20px;
    }

    .add-brand-btn {
        padding: 12px 25px;
        background: linear-gradient(to right, #27ae60, #2ecc71);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 15px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 10px rgba(46, 204, 113, 0.3);
    }

        .add-brand-btn:hover {
            background: linear-gradient(to right, #219653, #27ae60);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(46, 204, 113, 0.4);
        }

    .admin-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

        .admin-table thead {
            background: linear-gradient(to right, #3498db, #2980b9);
            color: white;
            position: sticky;
            top: 0;
        }

        .admin-table th {
            padding: 16px 15px;
            text-align: left;
            font-weight: 600;
            font-size: 15px;
        }

        .admin-table td {
            padding: 14px 15px;
            border-bottom: 1px solid #eef2f7;
            color: #333;
            background-color: #fff;
        }

        .admin-table tbody tr {
            transition: all 0.2s ease;
        }

            .admin-table tbody tr:hover {
                background-color: #f8fafc;
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            }

        .admin-table img {
            max-width: 50px;
            height: auto;
            border-radius: 6px;
            border: 1px solid #eaeaea;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

            .admin-table img:hover {
                transform: scale(1.8);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                z-index: 10;
                position: relative;
            }

    .action-links {
        display: flex;
        gap: 10px;
        align-items: center;
    }

        .action-links a {
            text-decoration: none;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 16px;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        }

            .action-links a::before {
                content: "";
                position: absolute;
                width: 100%;
                height: 100%;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.2);
                opacity: 0;
                transition: all 0.3s ease;
            }

            .action-links a:hover::before {
                opacity: 1;
                transform: scale(1.2);
            }

    .view-btn {
        background: linear-gradient(to right, #3498db, #2980b9);
    }

    .edit-btn {
        background: linear-gradient(to right, #f39c12, #e67e22);
    }

    .delete-btn {
        background: linear-gradient(to right, #e74c3c, #c0392b);
    }

    .action-links a:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 12px rgba(0, 0, 0, 0.2);
    }

    .action-links .divider {
        color: #ddd;
        font-size: 18px;
    }

    .no-data {
        text-align: center;
        padding: 25px;
        color: #7f8c8d;
        font-style: italic;
        background: #f9fbfd;
    }

        .no-data td {
            background: #f9fbfd;
        }

    /* Responsive table */
    @@media (max-width: 992px) {
        .admin-container

    {
        margin: 15px;
        padding: 20px;
    }

    .admin-table {
        display: block;
        overflow-x: auto;
    }

    .button-add {
        text-align: center;
    }

    .admin-table th,
    .admin-table td {
        min-width: 120px;
    }

    .action-links {
        flex-wrap: wrap;
        justify-content: center;
    }

        .action-links .divider {
            display: none;
        }

    }

    /* Animation */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .admin-table tbody tr {
        animation: fadeIn 0.4s ease-out;
        animation-fill-mode: both;
    }

        .admin-table tbody tr:nth-child(1) {
            animation-delay: 0.1s;
        }

        .admin-table tbody tr:nth-child(2) {
            animation-delay: 0.2s;
        }

        .admin-table tbody tr:nth-child(3) {
            animation-delay: 0.3s;
        }

        .admin-table tbody tr:nth-child(4) {
            animation-delay: 0.4s;
        }

        .admin-table tbody tr:nth-child(5) {
            animation-delay: 0.5s;
        }
</style>

<div class="admin-container">
    <h2>QUẢN LÝ CHI NHÁNH</h2>
    <div class="button-add">
        <a asp-action="Add" class="btn add-brand-btn">
            <i class="fas fa-plus-circle"></i> Thêm chi nhánh mới
        </a>
    </div>
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>TÊN CHI NHÁNH</th>
                <th>LOGO</th>
                <th>HÀNH ĐỘNG</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var brand in Model)
                {
                    <tr>
                        <td>@brand.Id</td>
                        <td>@brand.Name</td>
                        <td><img src="@brand.LogoUrl" alt="@brand.Name" /></td>
                        <td class="action-links">
                            <a asp-action="Display" asp-route-id="@brand.Id" class="btn view-btn" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            <span class="divider">|</span>
                            <a asp-action="Edit" asp-route-id="@brand.Id" class="btn edit-btn" title="Chỉnh sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <span class="divider">|</span>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@brand.Id" class="btn delete-btn" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="no-data">
                        <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 15px; display: block;"></i>
                        Không có chi nhánh nào được tìm thấy
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    // Hiệu ứng khi di chuột vào logo
    document.querySelectorAll('.admin-table img').forEach(img => {
        img.addEventListener('mouseenter', function() {
            this.style.zIndex = '10';
        });

        img.addEventListener('mouseleave', function() {
            this.style.zIndex = '';
        });
    });
</script>