@model IEnumerable<DoAnLTW.Models.Category>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý danh mục";
}

<link rel="stylesheet" href="~/css/categoryView.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />

<style>
    /* Root Variables for Consistent Theming */
    :root {
        --primary-color: #2563eb; /* Soft blue */
        --accent-color: #f59e0b; /* Warm amber */
        --background-color: #f3f4f6; /* Light gray background */
        --card-background: #ffffff;
        --text-dark: #1f2937; /* Dark gray for text */
        --text-muted: #6b7280; /* Muted text */
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        --border-radius: 8px;
        --transition: all 0.2s ease-in-out;
    }

    /* Container */
    .admin-container {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 1.5rem;
        background: var(--background-color);
        border-radius: var(--border-radius);
    }

    /* Card Styling */
    .card {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        transition: var(--transition);
    }

        .card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .card-header {
        background: var(--card-background);
        border-bottom: 1px solid #e5e7eb;
        padding: 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .card-header h2 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .card-body {
        padding: 1.5rem;
    }

    /* Button Styling */
    .button-add {
        margin-bottom: 1rem;
    }

    .btn {
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.5rem 1.25rem;
        border-radius: 20px;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .add-category-btn {
        background: var(--accent-color);
        color: #fff;
        border: none;
    }

        .add-category-btn:hover {
            background: #d97706; /* Darker amber */
            transform: translateY(-2px);
        }

    .edit-btn {
        background: transparent;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        width: 32px;
        height: 32px;
        padding: 0;
        justify-content: center;
    }

        .edit-btn:hover {
            background: var(--primary-color);
            color: #fff;
        }

    .delete-btn {
        background: transparent;
        color: #dc2626;
        border: 1px solid #dc2626;
        width: 32px;
        height: 32px;
        padding: 0;
        justify-content: center;
    }

        .delete-btn:hover {
            background: #dc2626;
            color: #fff;
        }

    /* Table Styling */
    .admin-table {
        width: 100%;
        border-collapse: collapse;
        background: var(--card-background);
        border-radius: var(--border-radius);
        overflow: hidden;
    }

        .admin-table thead th {
            background: #f9fafb;
            color: var(--text-dark);
            font-weight: 500;
            padding: 0.75rem 1rem;
            text-align: left;
            font-size: 0.875rem;
            border-bottom: 1px solid #e5e7eb;
        }

        .admin-table tbody tr {
            transition: var(--transition);
        }

            .admin-table tbody tr:hover {
                background: #f0f7ff;
            }

        .admin-table tbody td {
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
            color: var(--text-dark);
            border-bottom: 1px solid #e5e7eb;
            vertical-align: middle;
        }

    .action-links {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

        .action-links a {
            text-decoration: none;
        }

    /* Empty State */
    .admin-table tbody td[colspan="3"] {
        text-align: center;
        padding: 2rem;
        color: var(--text-muted);
        font-style: italic;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .admin-container

    {
        padding: 1rem;
    }

    .card-header h2 {
        font-size: 1.125rem;
    }

    .admin-table thead {
        display: none;
    }

    .admin-table tbody tr {
        display: block;
        margin-bottom: 1rem;
        border: 1px solid #e5e7eb;
        border-radius: var(--border-radius);
    }

    .admin-table tbody td {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 1rem;
        border-bottom: none;
    }

        .admin-table tbody td:before {
            content: attr(data-label);
            font-weight: 600;
            color: var(--text-muted);
            width: 40%;
        }

        .admin-table tbody td.action-links {
            justify-content: flex-end;
            gap: 0.5rem;
        }

    .btn {
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
    }

    }
</style>

<div class="admin-container">
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-list"></i> Danh mục sản phẩm</h2>
            <div class="button-add">
                <a asp-action="Add" class="btn add-category-btn"><i class="fas fa-plus"></i> Thêm danh mục mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td data-label="ID">@category.Id</td>
                                <td data-label="Tên danh mục">@category.Name</td>
                                <td data-label="Hành động" class="action-links">
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn edit-btn" title="Sửa">✏️</a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger delete-btn" title="Xóa" data-id="@category.Id">🗑</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">Không có danh mục nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle delete button click
            $('.delete-btn').click(function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var url = $(this).attr('href');

                if (confirm('Bạn có chắc chắn muốn xóa danh mục này?')) {
                    $.ajax({
                        url: url,
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                toastr.success(response.message);
                                setTimeout(function () {
                                    location.reload();
                                }, 1500);
                            } else {
                                toastr.error(response.message);
                            }
                        },
                        error: function () {
                            toastr.error('Đã xảy ra lỗi khi xóa danh mục');
                        }
                    });
                }
            });
        });
    </script>
}